# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector Database (using Supabase pgvector)
VECTOR_DB_TYPE=supabase
# Optional: Pinecone (if you prefer Pinecone over Supabase pgvector)
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=aware-ai

# Server Configuration
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend Configuration (for Next.js client-side)
# This must be set in Vercel environment variables for production
NEXT_PUBLIC_API_URL=http://localhost:8000

# Memory Configuration
MEMORY_COMPRESSION_THRESHOLD=50
MEMORY_SUMMARY_INTERVAL=10
MAX_CONTEXT_TOKENS=8000

# Fine-tuning
FINE_TUNING_ENABLED=true
FINE_TUNING_DATA_DIR=./fine_tuning_data

# Embeddings
USE_CUSTOM_EMBEDDINGS=false

# Supabase (for persistent conversation threads and authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
# JWT Secret for verifying auth tokens (get from Supabase Dashboard > Settings > API > JWT Secret)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Frontend Supabase Configuration (for Next.js client-side authentication)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
